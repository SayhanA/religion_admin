<%- include('../Includes/dashboard') %> <%- include('../Includes/filter') %>

<table class="min-w-full table-auto mt-10">
  <thead>
    <tr class="bg-gray-100">
      <th class="px-4 py-2 text-left">Name</th>
      <th class="px-4 py-2 text-left">Email</th>
      <th class="px-4 py-2 text-left">Status</th>
      <th class="px-4 py-2 text-center">Edit</th>
      <th class="px-4 py-2 text-center">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(user => { %>
    <tr class="border-b">
      <td class="px-4 py-2"><%= user.name %></td>
      <td class="px-4 py-2"><%= user.email %></td>
      <td class="px-4 py-2">
        <span
          class="<%= user.status === 'Active' ? 'bg-green-500' : 'bg-yellow-500' %> text-white px-2 py-1 rounded-full"
        >
          <%= user?.status ? 'Active' : 'Inactive' %>
        </span>
      </td>
      <td class="px-4 py-2 text-center">
        <button class="text-blue-500 hover:text-blue-700">
          <i class="fa-solid fa-pen"></i>
        </button>
      </td>
      <td class="px-4 py-2 text-center">
        <button class="text-red-500 hover:text-red-700">
          <i class="fa-solid fa-trash"></i>
        </button>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
<%-include('../Includes/footer') %>
