<div
  id="deleteModalAll"
  class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden"
>
  <div class="bg-white p-6 rounded-lg shadow-lg w-96">
    <h2 class="text-xl font-semibold mb-4 text-red-600">Confirm Deletion</h2>
    <p id="deleteMessage" class="mb-4 text-gray-600">
      Are you sure you want to delete all data
      <span class="font-bold" id="casteName"></span>?
    </p>
    <div class="flex justify-end gap-3">
      <button
        id="cancelDeleteAll"
        class="bg-gray-300 px-4 py-2 rounded-lg hover:bg-gray-400"
      >
        Cancel
      </button>
      <form
        id="deleteAllForm"
        action="<%= pageTitle.includes('Cast') ? '/admin/castes/deleteAll' : '/admin/religion/deleteAll' %>"
        method="POST"
      >
        <button
          type="submit"
          id="confirmDeleteAll"
          class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-700"
        >
          Delete Selected
        </button>
      </form>
    </div>
  </div>
</div>

<script>
  const deleteModal = document.getElementById("deleteModalAll");

  document.getElementById("deleteAll").addEventListener("click", () => {
    deleteModal.classList.remove("hidden");
  });

  document.getElementById("cancelDeleteAll").addEventListener("click", () => {
    deleteModal.classList.add("hidden");
  });
</script>
