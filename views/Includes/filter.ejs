<section class="bg-white p-5 rounded-lg shadow-md border border-gray-200">
  <div class="flex min-w-full gap-5 items-center w-full">
    <form action="" class="flex gap-3">
      <div class="relative">
        <input
          type="text"
          name="search"
          id="search"
          placeholder="Search ..."
          class="border border-gray-300 rounded-md ps-10 py-2 w-72 placeholder-gray-400"
        />
        <i
          class="fa-solid fa-magnifying-glass text-gray-400 absolute start-3 top-1/2 -translate-y-1/2"
        ></i>
      </div>
      <button
        type="submit"
        class="border border-gray-300 p-2 flex gap-2 rounded-md px-5 items-center font-semibold"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-5"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 3c2.755 0 5.455.232 8.083.678.533.09.917.556.917 1.096v1.044a2.25 2.25 0 0 1-.659 1.591l-5.432 5.432a2.25 2.25 0 0 0-.659 1.591v2.927a2.25 2.25 0 0 1-1.244 2.013L9.75 21v-6.568a2.25 2.25 0 0 0-.659-1.591L3.659 7.409A2.25 2.25 0 0 1 3 5.818V4.774c0-.54.384-1.006.917-1.096A48.32 48.32 0 0 1 12 3Z"
          />
        </svg>
        Filter
      </button>
    </form>

    <div class="flex gap-5 ml-auto">
      <!-- Add New Religion Button -->
      <!-- <button
        id="addNewReligionButton"
        class="bg-green-500 text-white px-4 py-2 rounded-md"
      >
        Add New
      </button> -->
      <% if (href) { %>
      <a href="<%= href %>" class="bg-green-500 text-white px-4 py-2 rounded-md"
        >Add New <%= page %></a
      >

      <% } else { %>
      <button
        id="addNewReligionButton"
        class="bg-green-500 text-white px-4 py-2 rounded-md"
      >
        Add New
      </button>
      <% } %>

      <!-- Delete All Religions -->
      <button
        id="deleteAll"
        class="ml-auto px-4 py-2 bg-red-500 text-white rounded-md hover:bg-red-700 flex items-center"
      >
        <i class="fa-solid fa-trash pr-2"></i> Delete
      </button>
    </div>
  </div>

  <%- include("../Includes/deleteModal") %>
